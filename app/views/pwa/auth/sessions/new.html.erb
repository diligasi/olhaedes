<% content_for :title do %>
  Sign in
<% end %>

<p class="login-box-msg">Insira seus dados para iniciar a sessÃ£o</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-group mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'E-mail' %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-envelope"></span>
      </div>
    </div>
  </div>

  <div class="input-group mb-3">
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: 'Senha' %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-lock"></span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <% if devise_mapping.rememberable? %>
        <div class="icheck-primary">
          <%= f.check_box :remember_me, id: 'remember' %>
          <%= f.label :remember_me, 'Lembrar senha' %>
        </div>
      <% end %>
    </div>
    
    <div class="col-4">
      <%= f.submit 'Entrar', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>

<br />

<div class="row">
  <div class="col-10">
    <p class="mb-1">
      <%= render 'admin/auth/shared/links' %>
    </p>
  </div>

  <div class="col-2">
    <%= link_to new_admin_user_session_path, class: 'ml-3' do %>
      <i class="fa fa-users-cog" style="color: #007bff;" data-tooltip="tooltip" title="Acesso admin"></i>
  <% end %>
  </div>
</div>
