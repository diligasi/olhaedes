<% content_for :title do %>
  Detalhes do <%= @user.name %>
<% end %>

<section class="content-header">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Detalhes do usuário</h1>
        </div>
        
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><%= link_to 'Home', admin_root_path %></li>
            <li class="breadcrumb-item active">Detalhes do usuário</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card card-primary">
          <div class="card-header">
            <div class="col-sm-12">
              <p id="notice"><%= notice %></p>
            </div>
          </div>

          <%= render @user %>

          <div class="card-footer">
            <%= link_to "#{translate 'actions.back'}", admin_users_path, class: 'btn btn-secondary' %>
            <%= link_to "#{translate 'actions.update_password'}", edit_password_admin_users_path, class: 'btn btn-warning' if current_admin_user.id == @user.id %>
            <%= link_to "#{translate 'actions.edit'}", edit_admin_user_path(@user), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
