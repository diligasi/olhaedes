<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>

<% unless page.current? %>
  <li class="page-item"><%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link' %></li>
<% else %>
  <li class="page-item"><%= link_to page, '#', remote: remote, rel: page.rel, class: 'page-link current-page-link', disabled: 'disabled' %></li>
<% end %>

<style>
.current-page-link {
  z-index: 2;
  color: #0056b3;
  text-decoration: none;
  background-color: #e9ecef;
  border-color: #dee2e6;
  cursor: default;
}
</style>
